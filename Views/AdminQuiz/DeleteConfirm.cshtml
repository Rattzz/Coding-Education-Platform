@model Quiz

<div>
    <p>
        Are you sure about deleting @Model.QuizName named quiz?
        <form method="post" action="">
            <input type="hidden" asp-for="@Model.QuizId" />
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="/AdminQuiz/Index" class="btn btn-success">No</a>
        </form>
    </p>
</div>