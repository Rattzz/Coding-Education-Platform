@model IEnumerable<KursKayit>

<h2 style="text-align:center">Course Enroll List</h2>
    <a asp-controller="KursKayit" asp-action="Create" role="button" class="btn btn-sm btn-primary">New Course Enroll</a>
    <hr />

    <table class="table table-bordered">
        <thead class="bg-warning">
            <tr>
                <th style="width:150px;">CourseEnrollId</th>
                <th>Full Name</th>
                <th>Course Title</th>
                <th>Enroll Date</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KursKayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>@Html.DisplayFor(modelItem => item.KayitTarihi)</td>
                <td>
                    <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.KursKayitId"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
