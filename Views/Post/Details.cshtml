@{
    ViewData["Title"] = "Posts";
}

@model Post

<h2 style="text-align:center;font-weight:bold">@Model.Title</h2>
<hr />
<div class="card mb-3">
    <div class="card-body">
        <div class="post-content" id="post-content">
            @Html.Raw(Model.Body)
        </div>

        <p class="card-text"><small class="text-muted">@Model.PostDate.ToString("dd.MM.yyyy hh:mm")</small></p>
        <a asp-controller="Post" asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-success">Edit</a>
        <form asp-controller="Post" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure that you want to delete this tutorial?');">
            <input type="hidden" name="id" value="@Model.PostId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#post-content a').addClass('custom-link');
    });
</script>

<style>
    .custom-link {
        color: navy !important;
        text-decoration-line: underline; /* Set your desired link color */
    }
</style>
