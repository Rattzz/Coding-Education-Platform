@model IEnumerable<Question>

<h2 style="text-align:center">Questions List</h2>
<a asp-controller="Question" asp-action="Create" role="button" class="btn btn-sm btn-primary">New Question</a>
<hr />

<table class="table table-bordered">
    <thead class="bg-warning">
        <tr>
            <th style="width:150px;">QuestionId</th>
            <th>QuestionText</th>
            <th>QuizId</th>

            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.QuestionId)</td>
                <td>@Html.DisplayFor(modelItem => item.QuestionText)</td>
                <td>@Html.DisplayFor(modelItem => item.QuizId)</td>
                <td>
                    <a asp-controller="Question" asp-action="Delete" asp-route-id="@item.QuestionId"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
